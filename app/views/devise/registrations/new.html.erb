<div class="row">
  <div class="col-sm-6">
    <h1>Sign up</h1>

    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <hr>
        <h5>Employee Information:</h5>
      <hr>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="col-sm-6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :birthday %>
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
        <div class="col-sm-6">
          <%= f.label :marital_status %>
          <%= f.text_field :marital_status, class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <hr>
      <div class="row">
        <div class="col-sm-12">
          <%= f.label :position %>
          <%= f.text_field :position, class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <hr>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :telephone_home %>
          <%= f.text_field :telephone_home, class: "form-control" %>
        </div>
        <div class="col-sm-6">
          <%= f.label :mobile_phone %>
          <%= f.text_field :mobile_phone, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :telephone_work %>
          <%= f.text_field :telephone_work, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <hr>
        <h5>Login Information:</h5>
      <hr>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :username %>
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>
        </div>
        <div class="col-sm-6">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="col-sm-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>


    <%= render "devise/shared/links" %>

  </div>
</div>
